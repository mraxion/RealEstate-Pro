# Variables de Entorno para InmoAdmin

# Base de Datos
DATABASE_URL=postgresql://postgres:password@localhost:5432/inmoadmin
# También se pueden usar servicios en la nube como Neon.tech
# DATABASE_URL=postgres://username:password@us-east-2.aws.neon.tech/dbname

# Configuración del Servidor
PORT=5000
NODE_ENV=development

# Autenticación y Sesiones
SESSION_SECRET=cambia_esto_por_un_secreto_aleatorio_seguro

# Configuración para Servicios Externos (opcionales)
# Automa.site (para automatización de flujos de trabajo)
# AUTOMA_SITE_API_KEY=tu_api_key_aqui

# Idealista API (para sincronización y análisis de mercado)
# IDEALISTA_API_KEY=tu_api_key_aqui

# Fotocasa API (para sincronización)
# FOTOCASA_API_KEY=tu_api_key_aqui

# Configuración de Almacenamiento (para imágenes de propiedades)
# STORAGE_TYPE=local # opciones: local, s3, cloudinary
# STORAGE_BASE_URL=http://localhost:5000/uploads
# Para S3:
# AWS_ACCESS_KEY_ID=tu_access_key
# AWS_SECRET_ACCESS_KEY=tu_secret_key
# AWS_REGION=eu-west-1
# AWS_BUCKET_NAME=inmoadmin-uploads